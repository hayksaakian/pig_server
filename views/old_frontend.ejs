    <div class="container" style="height: 80%">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 well" id="login">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Name" id="name" name="name" autofocus>
            <span class="input-group-btn">
              <button id="loginbtn" class="btn btn-default" type="button">Log In</button>
            </span>
          </div><!-- /input-group -->
        </div>
      </div>
      <div class="row" style="height: 100%">
        <div class="col-md-8">
          <div id="main">
            <div id="matchmaking_view">
              <h3>Matchmaking list</h3>
              <div id="matchmaking"></div>            
            </div>
            <div id="games_view">
              <h3>Games</h3>
              <div id="games"></div>
              <hr>
              <button class="btn btn-success navbar-btn" id="search_for_match">Search for a Game</button>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="well chat-container">
            <div class="chat" role="tabpanel">
              <ul class="nav nav-tabs" id="roompicker" role="tablist">
                <li role="presentation" class="active"><a href="#server-broadcast-chat" id="server-broadcast-chat-picker" aria-controls="server-broadcast-chat" role="tab" data-toggle="tab" data-roomname="server-broadcast">Global Chat <span data-unread="0" class="label label-info label-as-badge"></span></a></li>          
              </ul>
              <div class="tab-content chatboxes">
                <ul id="server-broadcast-chat" role="tabpanel" class="tab-pane fade in active chat-lines">
                </ul>
              </div>
              <div class="form-inline chat-input-box input-group">
                <input class="form-control" id="message" autocomplete="off" placeholder="Enter a message..." />
                <span class="input-group-btn"> 
                  <button id="send_message" type="button" class="btn">Send</button>
                </span>
              </div>
            </div>
          </div>

          <div id="leaderboard">
            <h3>Leaderboard</h3>
            <ol id="leaderboard_list"></ol>
          </div>
        </div>
      </div>
    </div>